  "shortcuts": [
    {
      "name": "View Orders",
      "short_name": "Orders",
      "description": "Quickly access pending and recent orders",
      "url": "/admin/orders/",
      "icons": [
        {
          "src": "/static/images/shortcut-orders.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add Product",
      "short_name": "Add Product",
      "description": "Add new menu items to your restaurant",
      "url": "/admin/products/add/",
      "icons": [
        {
          "src": "/static/images/shortcut-add-product.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "View business performance and insights",
      "url": "/admin/analytics/",
      "icons": [
        {
          "src": "/static/images/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Catering Events",
      "short_name": "Catering",
      "description": "Manage catering requests and events",
      "url": "/admin/catering/",
      "icons": [
        {
          "src": "/static/images/shortcut-catering.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "food",
    "lifestyle"
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+bueadelights",
      "url": "/admin/handle/%s"
    }
  ],
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "file_handlers": [
    {
      "action": "/admin/import/",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      },
      "icons": [
        {
          "src": "/static/images/file-handler-icon.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  
  "share_target": {
    "action": "/admin/share-handler/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/jpeg", "image/png", "image/webp", "image/gif"]
        }
      ]
    }
  },
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://bueadelights.com/manifest.json"
    }
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  
  "permissions": [
    "notifications",
    "background-sync",
    "geolocation",
    "camera"
  ],
  
  "workbox": {
    "navigationPreload": true,
    "runtimeCaching": [
      {
        "urlPattern": "/admin/api/.*",
        "handler": "NetworkFirst",
        "options": {
          "cacheName": "api-cache",
          "networkTimeoutSeconds": 3,
          "expiration": {
            "maxEntries": 50,
            "maxAgeSeconds": 300
          },
          "cacheKeyWillBeUsed": "workbox-cache-key-will-be-used"
        }
      },
      {
        "urlPattern": ".*\\.(png|jpg|jpeg|svg|gif|webp)",
        "handler": "CacheFirst",
        "options": {
          "cacheName": "images-cache",
          "expiration": {
            "maxEntries": 100,
            "maxAgeSeconds": 2592000
          }
        }
      },
      {
        "urlPattern": ".*\\.(css|js)",
        "handler": "StaleWhileRevalidate",
        "options": {
          "cacheName": "static-resources"
        }
      }
    ]
  },
  
  "custom": {
    "offline_fallback_page": "/admin/offline/",
    "push_notification_endpoint": "/admin/api/push-notifications/",
    "background_sync_tags": [
      "order-sync",
      "product-sync",
      "analytics-sync"
    ],
    "app_features": {
      "dark_mode": true,
      "offline_mode": true,
      "push_notifications": true,
      "background_sync": true,
      "responsive_design": true,
      "touch_gestures": true,
      "voice_commands": false,
      "biometric_auth": false
    },
    "supported_locales": [
      "en-US",
      "fr-FR",
      "en-CM"
    ],
    "min_screen_width": 320,
    "max_screen_width": 2560,
    "supported_orientations": [
      "portrait",
      "landscape"
    ]
  }
}